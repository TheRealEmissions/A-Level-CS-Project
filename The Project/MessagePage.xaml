<Page x:Class="The_Project.MessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MessagePage">

    <Grid Background="White">
        <TextBox Text="Message Content" Name="TxtMsgContent"  TextWrapping="Wrap" Margin="22,393,112,10"/>
        <Button Content="Send" Name="BtnSend" Margin="693,393,18,10" Click="BtnSend_Click"/>
        <Button Content="Terminate Connection" Name="BtnTerminateConnection" Margin="656,2,18,421" Foreground="#FFFF0303" Click="BtnTerminateConnection_Click"/>
        <Button Content="Set Nickname" x:Name="BtnSetNickname" Margin="520,2,154,421"/>
        <TextBlock Text="User" Name="TxtblockUser" TextWrapping="Wrap" Margin="34,8,622,417"/>
        <ListBox Name="ListboxMessages" Margin="22,38,18,78">
        </ListBox>
    </Grid>
</Page>
