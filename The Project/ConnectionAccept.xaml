<Window x:Class="The_Project.ConnectionAcceptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Project"
        mc:Ignorable="d"
        Title="ConnectionAccept" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*" />
            <ColumnDefinition Width="791*" />
        </Grid.ColumnDefinitions>
        <Button Name="Btn_AcceptConnection" Content="Accept" Margin="50,92,200,36" Background="#FF38EB5B" Grid.Column="1" />
        <Button Name="Btn_RejectConnection" Content="Reject" Margin="198,92,52,36" Background="#FFF47272" Grid.Column="1" />
        <TextBlock Text="Accept Connection From:" TextWrapping="Wrap" Margin="84,10,88,136" FontSize="20px" TextAlignment="Center" Grid.Column="1" />
        <TextBlock Name="Txtblock_IPAddress" Text="IP pending..." TextWrapping="Wrap" Margin="84,48,88,98" FontSize="18px" TextAlignment="Center" Grid.Column="1" />
    </Grid>
</Window>