<Window x:Class="The_Project.LoggingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Project"
        mc:Ignorable="d"
        Title="LoggingWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10,10,10,10">
            <TextBlock Name="TxtLog" Text="Logging" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Left" />
        </ScrollViewer>
    </Grid>
</Window>