      xmlns:local="clr-namespace:The_Project"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserConnection">

    <Grid Opacity="1" Background="White">
        <TextBox Text="Input User ID" TextWrapping="Wrap" Name="txtinput_userid" Margin="184,265,184,142" TextChanged="Txtinput_userid_TextChanged" />
        <Button Content="Debug Window" Margin="10,10,689,414" Name="btn_debugWindow" Click="Btn_debugWindow_Click"/>
        <Button Content="Connect" Margin="360,329,360,88" Name="btn_connect" Click="Btn_connect_Click"/>
        <TextBlock Text="Your User ID:" TextWrapping="Wrap" TextAlignment="Center" Margin="196,69,196,355" FontSize="20px"/>
        <TextBlock Name="txtblock_userId" Text="Generating..." TextWrapping="Wrap" TextAlignment="Center" Margin="196,100,196,330"/>
    </Grid>
